{
	"name": "markdown-viewer",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"start": "tsx src/index.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:e2e": "PLAYWRIGHT_TSCONFIG=tsconfig.playwright.json playwright test",
		"fix:format": "biome format --write .",
		"fix:lint": "biome lint --write .",
		"fix:check": "biome check --write .",
		"typecheck": "tsgo",
		"typecheck:tsc": "tsc --noEmit"
	},
	"dependencies": {
		"rehype-stringify": "^10.0.1",
		"remark": "^15.0.1",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"unified": "^11.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@playwright/test": "^1.55.0",
		"@types/node": "^24.3.1",
		"@typescript/native-preview": "7.0.0-dev.20250910.1",
		"tsx": "^4.20.5",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
